<UserControl x:Class="RobotEditor.Controls.SnippetToolTip" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel>
        <TextBlock Name="title" FontWeight="Bold" Text="{Binding Title}" />
        <TextBlock Name="shortcuts" Text="{Binding Shortcuts}" />
        <TextBlock Name="author" Text="{Binding Author}" />
        <TextBlock Name="description" Text="{Binding Description}" />
    </StackPanel>
</UserControl>
